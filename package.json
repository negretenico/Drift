{
  "name": "drift",
  "version": "1.0.0",
  "description": "**Drift** is an offline-first framework for React applications.\r Its goal is simple but powerful: **make your app resilient to bad networks**.",
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/negretenico/Drift.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/negretenico/Drift/issues"
  },
  "homepage": "https://github.com/negretenico/Drift#readme",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "engines": {
    "node": ">=22.5.0",
    "npm": ">=10.9.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.0.0",
    "turbo": "^2.0.0",
    "vitest": "^3.2.4"
  }
}
